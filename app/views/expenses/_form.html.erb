<div class="container">
   <i>If you do not see any category, make one in Manage Expense Category</i>
  <%= simple_form_for @expense do |f| %>
  <p>
    <%= f.input :amount, as: :string %>
  </p>
    
  <p>
    <%= f.input :description %>
  </p>
  
  <p>
    <%= f.label :category %>
    <%= collection_select(:expense, :expense_category_id, ExpenseCategory.for_user(current_user.id), :id, :category_name) %>
  </p>
  
  <p>
    <%= f.input :created_at, label: 'Date' %>
  </p>
  
  <p>
    <%= f.button :submit, class: 'btn btn-success' %>
  </p>
  
<% end %>
</div>