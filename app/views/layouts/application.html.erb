<!DOCTYPE html>
<html>
<head>
  <title>ExpenseTracker</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-default">
  <div class="col-xs-9 container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="#">Expense Tracker</a>
    </div>
    <ul class="nav navbar-nav">
      <li><a href="<%= incomes_path %>">Income</a></li>
      <li><a href="<%= expenses_path %>">Expense</a></li>
    </ul>
   
  </div>
  <div class="col-xs-3">
    <ul class="nav navbar-nav">
      <% if current_user.present? %>
      <li><a href="#">Hi, <%= current_user.name %></a></li>
      <li><a href="<%= destroy_user_session_path %>" data-method="delete">Sign Out</a></li>
      <% else %>
      
      <li><a href="<%= new_user_session_path %>">Sign In</a></li>
      <li><a href="<%= new_user_registration_path %>">Sign Up</a></li>
      
      <% end %>
    </ul>

  </div>
</nav>
 <p class="notice"><%= notice %></p>
 <p class="alert"><%= alert %></p>

<%= yield %>

</body>
</html>
